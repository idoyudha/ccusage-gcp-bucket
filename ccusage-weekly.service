[Unit]
Description=Claude Code Usage Weekly Collection
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/bin/node /usr/local/lib/node_modules/ccusage-gcp-bucket/index.js
Environment="PATH=/usr/bin:/usr/local/bin"
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target